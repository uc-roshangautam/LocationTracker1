<?xml version="1.0" encoding="utf-8" ?>
<!-- 
    MainPage.xaml
    
    Location Tracker Main Interface
    Displays a map with location pins and heat map visualization.
    Provides controls for starting/stopping tracking, clearing data, and refreshing the map.
-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="LocationTracker1.MainPage"
             Title="Location Tracker">

    <!-- Main layout grid: Control buttons, Map view, Status bar -->
    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        
        <!-- Row 0: Action buttons for tracking control -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10" HorizontalOptions="Center">
            <!-- Start/Stop tracking button - text changes based on state -->
            <Button x:Name="TrackingButton" 
                    Text="Start Tracking" 
                    Clicked="OnTrackingClicked"
                    WidthRequest="150"/>
            <!-- Clear all saved locations button -->
            <Button Text="Clear All" 
                    Clicked="OnClearClicked"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    WidthRequest="100"/>
            <!-- Refresh map from database button -->
            <Button Text="Refresh Map" 
                    Clicked="OnRefreshClicked"
                    WidthRequest="120"/>
            <!-- Demo mode button for screenshots -->
            <Button Text="Add Demo Data" 
                    Clicked="OnDemoClicked"
                    BackgroundColor="DarkGreen"
                    TextColor="White"
                    WidthRequest="130"/>
        </HorizontalStackLayout>

        <!-- Row 1: Map display with pins and heat map visualization -->
        <maps:Map x:Name="LocationMap" 
                  Grid.Row="1" 
                  Margin="0,10,0,10"
                  MapType="Street"/>

        <!-- Row 2: Status bar showing current operation status -->
        <Frame Grid.Row="2" BackgroundColor="#2196F3" Padding="10" CornerRadius="5">
            <Label x:Name="StatusLabel" 
                   Text="Ready to track" 
                   TextColor="White" 
                   HorizontalOptions="Center"/>
        </Frame>

    </Grid>

</ContentPage>
